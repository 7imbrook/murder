# Capfile with example murder config

require 'murder'

# Capistrano settings -- all optional depending on your env
set :user, "deployuser"
ssh_options[:port] = 22
ssh_options[:host_key] = 'ssh-dss'
ssh_options[:compression] = false
ssh_options[:forward_agent] = true

# define an app server role
role :app, 'w01', 'w02', 'w03', 'w04', 'w05'

# General settings
set :remote_murder_path, "/usr/local/murder"

# set any of these empty to require user always specify
set :default_tag, ""
set :default_seeder_files_path, ""
set :default_destination_path, ""

# murder roles
role :tracker, 'tracker.example.com', :no_release => true
role :seeder, 'seeder.example.com', :no_release => true
role(:peers) { find_servers(:role => :app) }
